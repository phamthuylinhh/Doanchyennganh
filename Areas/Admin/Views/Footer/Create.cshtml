@model Doan.Models.Footer
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận thêm menu footer</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Thêm mới menu footer</h2>
        </div>

        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Title">Title</label>
                    <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Nhap tieu de" />
                    <span asp-validation-for="Title" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-row">
             
                <div class="form-group col-md-6">
                    <label asp-for="Contents">nội dung</label>
                    <input type="text" class="form-control mb-3" asp-for="Contents" placeholder="Nhap noi dung" />
                    <span asp-validation-for="Contents" class="alert-danger"></span>
                </div>
            
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
            <a asp-controller="menu" asp-action="index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
</main>