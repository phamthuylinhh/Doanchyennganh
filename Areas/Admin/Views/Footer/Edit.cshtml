
@model Doan.Models.Footer
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận sửa menu footer</h2>
    </div>

    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Sửa menu footer</h2>
        </div>

        <form method="post" asp-action="Edit">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <input type="text" class="form-control mb-3" asp-for="Id" type="hidden" /> 
              
            </div>
            <div class="form-row">
                <div class="form-row">
                   
                    <div class="form-group col-md-6">
                        <label asp-for="Title">Tiêu đề</label>
                        <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Nhập tiêu đề" />
                        <span asp-validation-for="Title" class="alert-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Contents">Noi dung</label>
                        <input type="text" class="form-control mb-3" asp-for="Contents" placeholder="Nhập nội dung" />
                        <span asp-validation-for="Contents" class="alert-danger"></span>
                    </div>
                   
                </div>
                <button type="submit" class="btn btn-lg btn-rimary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
                <a asp-controller="footer" asp-action="index" class="btn btn-lg btn-warning p-2">Quay  lại</a>
            </div>
        </form>
    </div>
</main>