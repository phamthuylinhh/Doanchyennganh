@model Doan.Models.Products
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm Sản Phẩm Mới</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css" rel="stylesheet">
</head>
<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <h2 style="font-family:'Times New Roman'">Thêm Sản Phẩm Mới</h2>
        </div>

        <p >
            <a type="button" class="btn btn-success" href="/admin/product/index" style="background-color: #343a40">
                <i class="bi bi-arrow-left me-1" style="background-color:  #343a40"></i>Quay lại danh sách
            </a>
        </p>

        <section class="section dashboard">
            <div class="row">
                <div class="col-12">
                    <div class="card recent-sales overflow-auto">
                        <div class="card-body mt-4">
                            <form method="post">
                                <div asp-validation-summary="All"></div>
                                <div class="form-row">
                                    <div class="form-group">
                                        <label asp-for="Name">Name</label>
                                        <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Nhap ten " />
                                        <span asp-validation-for="Name" class="alert-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group ">
                                        <label asp-for="Category_id">Category_id</label>
                                        <select asp-for="Category_id" class="form-select" id="Category_id">
                                            <option value="1">Quần áo</option>
                                            <option value="2">Áo phông</option>
                                            <option value="3">Váy đầm</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Link">Link</label>
                                        <input type="text" class="form-control mb-3" asp-for="Link" placeholder="Enter Link" />
                                        <span asp-validation-for="Link" class="alert-danger"></span>
                                    </div>
                                    <div class="form-group ">
                                        <label asp-for="Title">Title</label>
                                        <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Enter Title" />
                                        <span asp-validation-for="Title" class="alert-danger"></span>
                                    </div>
                                    <div class="form-group ">
                                        <label asp-for="Contents">Contents</label>
                                        <input type="text" class="form-control mb-3" asp-for="Contents" placeholder="Enter Contents" />
                                        <span asp-validation-for="Contents" class="alert-danger"></span>
                                    </div>
                                     <div class="form-group ">
                                        <label asp-for="Images">Images</label>
                                        <input type="text" class="form-control mb-3" asp-for="Images" placeholder="Enter Images" />
                                        <span asp-validation-for="Images" class="alert-danger"></span>
                                    </div> 

                                    <div class="form-group">
                                        <label asp-for="Price">Price</label>
                                        <input type="text" class="form-control mb-3" asp-for="Price" placeholder="Enter Price" />
                                        <span asp-validation-for="Price" class="alert-danger"></span>
                                    </div>
                                    <div class="form-group mt-5 mb-5">
                                        <label>
                                            @Html.CheckBox("IsActive", false)
                                            Hiển thị
                                        </label>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
                                <a asp-controller="product" asp-action="index" class="btn btn-lg btn-warning p-2">Quay lại</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
   
</body>
</html>
