@model Doan.Models.Slide
@{
     Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận xoá Slide</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Id">Id</label>
            <input type="text" class="form-control mb-3" asp-for="Id" disabled>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Title">Title</label>
            <input type="text" class="form-control mb-3" asp-for="Title" disabled>
        </div>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript: history.back()">
            <i class="billing-form bi-arrow-left-circle"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash-fill">Xoá Slide</i>
        </button>
    </form>
</main>
